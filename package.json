{
  "name": "todo-cdd-example",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.11.0",
    "msw": "^0.24.1",
    "node-sass": "^4.14.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.12.0",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@bahmutov/add-typescript-to-cypress": "^2.1.2",
    "@jackfranklin/test-data-bot": "^1.3.0",
    "@storybook/addon-actions": "^6.1.10",
    "@storybook/addon-essentials": "^6.1.10",
    "@storybook/addon-links": "^6.1.10",
    "@storybook/addon-storyshots": "^6.1.10",
    "@storybook/node-logger": "^6.1.10",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.1.10",
    "@suncin/stylelint-config-scss": "^1.0.2",
    "@testing-library/cypress": "^7.0.1",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.2.0",
    "@testing-library/user-event": "^12.5.0",
    "@types/jest": "26.0.15",
    "@types/node": "14.14.19",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "cypress": "^6.0.0",
    "eslint-plugin-cypress": "^2.11.2",
    "husky": "^4.3.0",
    "jest-date-mock": "^1.0.8",
    "lint-staged": "^10.5.0",
    "loki": "^0.27.0",
    "mutationobserver-shim": "^0.3.7",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.11.5",
    "stylelint": "^13.8.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "format": "prettier --write",
    "postinstall": "msw init public",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "test:e2e": "BROWSER=none start-test 3000 'cypress run'",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public --quiet"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=6",
    "yarn": ">=1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "stylelint": {
    "extends": [
      "@suncin/stylelint-config-scss"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --watchAll=false"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "yarn format",
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "yarn format",
      "stylelint --fix"
    ],
    "*.{json,md}": [
      "yarn format"
    ]
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.app",
        "preset": "iPhone 7"
      }
    }
  }
}
